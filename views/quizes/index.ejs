<form method="get" action="/quizes">
	<input type="text" name="search" placeholder="Ingrese el texto a buscar"/>
	<input type="submit" value="Buscar"/>
</form>
<% if(quizes.length < 1){ %>
<p>No existen coincidencias</p>
<% }else{ %>
<table>
<% for(var i = 0; i < quizes.length; i++){ %>
	<tr>
		<td><%= quizes[i].tema %></td>
		<td><a href="quizes/<%= quizes[i].id %>?tema=<%= quizes[i].tema %>"><%= quizes[i].pregunta %></td>
		<%if(session.user){%>
		<td><a href="quizes/<%= quizes[i].id %>/edit"><button type="button">Editar</button></a></td>
		<td><form method="post" action="quizes/<%= quizes[i].id %>?_method=delete"><button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">Eliminar</button></form></td>
		<%}%>
	</tr>
<% } %>
</table>
<% } %>
<p/>
<%if(session.user){%>
<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
<%}%>